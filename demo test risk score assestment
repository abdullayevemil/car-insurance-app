  label { display: block; margin-top: 12px; font-weight: bold; }
  input { width: 100%; padding: 8px; border-radius: 6px; border: 1px solid #ccc; margin-top: 6px; }
  button { width: 100%; margin-top: 20px; padding: 12px; background: #0057ff; color: #fff; border: none; border-radius: 6px; cursor: pointer; }
  button:hover { background: #0041c9; }
  .result { margin-top: 20px; font-size: 1.3em; font-weight: bold; text-align: center; }
